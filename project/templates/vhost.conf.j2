<VirtualHost *:80>
  ProxyRequests Off
  ProxyPreserveHost On
  <Proxy *>
    Order deny,allow
    Allow from all
  </Proxy>
  ProxyPass / http://localhost:8080/
  ProxyPassReverse / http://localhost:8080/
  <Location />
    Order allow,deny
    Allow from all
  </Location>
  ProxyPass /console http://localhost:8080/console
  ProxyPassReverse /console http://localhost:8080/console
  <Location /auth>
    Order allow,deny
    Allow from all
  </Location>
</VirtualHost>